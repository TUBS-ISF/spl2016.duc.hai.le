import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextArea;
import javafx.scene.layout.GridPane;
import javafx.scene.text.Font;
import javafx.scene.text.Text;

public class Weeks implements CalendaryExtentPlugin{
	private GridPane gridPane;
	
	private void getPane() {
		GridPane gridPane = new GridPane();
		
		for (int i = 0; i < 7; i++) {
			gridPane.add(new Text(getWeek(i, "en")), i, 0);
			gridPane.add(new Text(getWeek(i, "de")), i, 0);
			
		}
		
		for (int i = 0, k = -1; i < (7*24); i++) {
			if (i%24 == 0) {
				gridPane.add(new TextArea("" + (i%24) + ":00"),  ++k, i%24+1);
			} else {
				gridPane.add(new TextArea("" + (i%24) + ":00"), k, i%24+1);
			}
		}
		return gridPane;
	}
	
	private Button getButton() {
		Button Weeks = new Button("Weeks");
		return Weeks;
	}
}